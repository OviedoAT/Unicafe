<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vista.DetallesAlimentos">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgLogoDetail"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/logo_unicafe"/>

            <TextView
                android:id="@+id/txtTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UNICAFE"
                android:layout_gravity="center"
                android:textSize="25dp"
                android:paddingStart="15dp"
                android:paddingEnd="120dp"/>

            <Button
                android:id="@+id/btnShopDetailAliments"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="bottom"
                android:background="@drawable/shopping_car"/>

            <Button
                android:id="@+id/btnMenuDetailAliements"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="bottom"
                android:background="@drawable/menu"/>

        </LinearLayout>
        
        <ImageView
            android:id="@+id/imgDetailAliments"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_gravity="center"/>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center|top">
            
            <TextView
                android:id="@+id/txtNombDetailAliments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Promoción"
                android:textSize="25dp"/>
            <TextView
                android:id="@+id/txtPrecioDetailAliments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$"
                android:paddingStart="30dp"
                android:textSize="25dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtDescripDetailAliments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descripción"
                android:textSize="20dp"
                android:paddingBottom="25dp"/>
            <Button
                android:id="@+id/btnOrdenarDetailAliments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ordenar"
                android:backgroundTint="#644A2A"
                android:textSize="20dp"
                android:layout_gravity="center"/>
        </LinearLayout>
        
            
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>